                <input name="profil" type="file" class="form-control" accept="image/*" id="avatar-profil" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                <small class="btn" id="inputGroupFileAddon04">Photo de profil</small>
            </div>

            <div class="input-group">
                <input name="couverture" type="file" class="form-control" accept="image/*" id="avatr-couverture" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                <small class="btn" id="inputGroupFileAddon04">Photo de couverture</small>
            </div>

            <div class="form-floating">
                <textarea name="bio" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
