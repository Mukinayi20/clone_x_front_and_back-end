        <div class="modal-edite-contente">
            <div class="d-flex justify-content-between align-items-center">
                <div style="gap: 2.5rem;" class="d-flex align-items-center">
                    @include('component/btn_fermer')
                    <p class="fw-bolder">
                        Éditer le profil
                    </p>
                </div>
                <button type="submit" class="btn btn-outline-info">Enrégistrer</button>
            </div>
            <div style="position: relative;">
                <div  class="bg-body-secondary rounded" style="height: 10rem;">
                    <img id="image-couverture" class="mh-100" style="width: 100%; object-fit: cover;" src="#" alt="">
                </div>
                <div class="bg-body-secondary border border-white rounded-circle position-absolute border-3" style="height: 7rem; width: 7rem; position: absolute; top: 100px; left: 10px;">
                    <img style="height: 7rem; width: 7rem;" class="border border-white rounded-circle" id="image-profil" src="#" alt="">
                </div>
            </div>
            <div class="form-floating" style="margin-top: 2.4rem;">
