</div>
<script>
        const inputFileProfil = document.getElementById('avatar-profil')
        const inputFileCouverture = document.getElementById('avatr-couverture')
        const previewImageProfil = document.getElementById('image-profil')
        const previewImageCouverture = document.getElementById('image-couverture')

        inputFileProfil.addEventListener('change', (event) => {
            const file = event.target.files[0]

            if (file) {
            const reader = new FileReader()

            reader.onload = (e) => {
                previewImageProfil.src = e.target.result
                previewImageProfil.style.display = 'block'
            }

            reader.readAsDataURL(file)
            } else {
            previewImageProfil.src = ''
            previewImageProfil.style.display = 'none'
            }
        })
        inputFileCouverture.addEventListener('change', (event) => {
            const file = event.target.files[0]

            if (file) {
            const reader = new FileReader()

            reader.onload = (e) => {
                previewImageCouverture.src = e.target.result
                previewImageCouverture.style.display = 'block'
            }

            reader.readAsDataURL(file)
            } else {
            previewImageCouverture.src = ''
            previewImageCouverture.style.display = 'none'
            }
        })
</script>